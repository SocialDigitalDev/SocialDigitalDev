extends ../../layout/index.pug

//- Template variables
block vars
    - var $templateName = 'Quickview';
    - var $templateClass = 'ls-quickview';
//- Page styles
block append styles
    link(rel='stylesheet', href=`/arquivos/${$templateName}.css`, media='all')/

//- Main Content
block content
    section#product-content.espiar-produto
        .ls-produto
            .quick-left
                #productImages
                    vtex(.cmc:ProductImage)/
            .quick-right
                #productName
                    vtex(.cmc:productName)/
                #productDescription
                    strong Descrição: 
                    vtex(.cmc:ProductDescription)/
                #productSelection
                    vtex(.cmc:stockKeepingUnitSelection)/
                #productBuy
                    vtex(.cmc:skuPrice)/
                    vtex(.cmc:BuyButton)/
            #productAddToList
                a.add-wishlist(tabindex='0')
                    i.icon-favoritos
                h4.adicionar-lista Adicionar esse produto a lista:
                vtex(.cmc:GiftListInsertSkuV2)/

block append scripts
    script(type='text/javascript', src=`/arquivos/${$templateName}.js`) 