extends ../../layout/index.pug

//- Template variables
block vars
    - var $templateName = 'Product';
    - var $templateClass = 'ls-produto';
//- Page styles
block append styles
    link(rel='stylesheet', href=`/arquivos/${$templateName}.css`, media='all')/

//- Main Content
block content       
    section
        div.wrapper.produto-all
            div.bread
                vtex(.cmc:BreadCrumb)/
            div#produtoDiv-esquerda
                figure
                    div.img-produto
                        vtex(.cmc:ProductImage zoom='on')/
            div#produtoDiv-direita
                h1.nome-prod
                    vtex(.cmc:productName)/
                    span.sep
                span.cod-prod
                    vtex(.cmc:skuReference)/
                div.flags-promo
                    vtex(.cmc:discountHighlight)/
                div.variantes-sku
                    vtex(.cmc:skuSelection)/
                vtex(.cmc:skuPrice)/
                div.produto-buy__container
                    div.ls-produto__buy-quant
                        div.qtdPrateleira
                            span.btnDec
                            input.qtdVal(type='text' value='1')/
                            span.btnAcr
                    div.ls-produto__buy-button
                        vtex(.cmc:buyButton)/
                    a.add-wishlist
                        i.icon-favoritos    
                div.calc-frete
                    div.cep
                        h3
                            |  Calcule o frete e prazo de entrega.
                        vtex(.cmc:shippingValue)/
                        <script type='text/javascript'>$(document).ready(function(){ShippingValue();});</script>
                div.detalhes-prods
                    div#descricao-produto.desc-prod
                            h2.titulo Descrição
                            vtex(.cmc:ProductDescription)/
            section.prod-tabela 
                div.wrapper
                    vtex(.cmc:productSpecification)/
            section
                div.wrapper
                    div.avalicaoes
    section.receitas
        div.wrapper.slide-prod.pdp-receitas
            div.veja-receitas
                div.container-center
                    div.titulo-prateleira
                        h2
                            | Veja outras receitas
                    vtex:contentPlaceHolder(id=`pdp-receitas`)/
    section.prod-relacionados
        div.wrapper.slide-prod.qvvt
            div.container-center
                div.titulo-prateleira
                    h2
                        | Produtos relacionados
                vtex:contentPlaceHolder(id=`ls-qvvt`)/

block append scripts
    script(type='text/javascript', src=`/arquivos/${$templateName}.js`) 